{
  "name": "@huxy/pack",
  "version": "1.5.2",
  "title": "scripts",
  "feature": "0.0.1",
  "hooks": "0.0.1",
  "type": "module",
  "description": "@huxy/pack 是一个项目构建工具，集成了 esbuild、eslint、stylelint、jest、commitlint、husky、standard-version、postcss、prettier，提供开发环境、构建打包、本地启动服务、环境配置、代理配置等功能。使用简单方便，功能齐全，配置灵活，可自己添加需要的功能插件。",
  "homepage": "https://github.com/ahyiru/pack",
  "keywords": [
    "webpack",
    "node.js",
    "esbuild",
    "eslint",
    "stylelint",
    "jest",
    "commitlint",
    "husky",
    "prettier",
    "postcss",
    "standard-version",
    "scripts",
    "configs"
  ],
  "sideEffects": false,
  "main": "./index.js",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json",
    "./config/eslint": "./.eslintrc.cjs",
    "./config/stylelint": "./.stylelintrc.cjs",
    "./config/commitlint": "./commitlint.config.cjs",
    "./config/jest": "./jest.config.cjs",
    "./config/postcss": "./postcss.config.cjs",
    "./config/babel": "./babel.config.cjs",
    "./config/prettier": "./prettier.config.cjs",
    "./config/version": "./.versionrc.cjs"
  },
  "scripts": {
    "start": "node scripts/index.js",
    "build": "webpack --config scripts/webpack.production.js --progress",
    "analyze": "ANALYZE=1 webpack --config scripts/webpack.production.js --progress",
    "server": "node scripts/server.js --watch scripts/server.js",
    "test": "jest --colors --coverage",
    "eslint": "eslint 'app/**/*.{js,jsx}'",
    "stylelint": "stylelint 'app/**/*.{css,less}'",
    "lint": "npm run eslint && npm run stylelint",
    "lint-fix": "eslint --fix 'app/**/*.{js,jsx}' && stylelint --fix 'app/**/*.{css,less}'",
    "prettier": "prettier 'app/**/*' --write --ignore-unknown && npm run lint-fix",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ahyiru/pack"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.24.3",
    "@babel/eslint-parser": "^7.24.1",
    "@babel/plugin-transform-runtime": "^7.24.3",
    "@babel/preset-env": "^7.24.3",
    "@babel/preset-react": "^7.24.1",
    "@babel/runtime": "^7.24.1",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@huxy/copy-file-webpack-plugin": "^1.1.3",
    "@huxy/open-browser-webpack-plugin": "^1.1.1",
    "@huxy/utils": "^2.1.9",
    "autoprefixer": "^10.4.19",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "body-parser": "^1.20.2",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "css-loader": "^6.10.0",
    "esbuild-loader": "^4.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "express": "^4.19.2",
    "file-loader": "^6.2.0",
    "fs-extra": "^11.2.0",
    "html-loader": "^5.0.0",
    "html-webpack-plugin": "^5.6.0",
    "http-proxy-middleware": "^2.0.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "less": "^4.2.0",
    "less-loader": "^12.2.0",
    "mini-css-extract-plugin": "^2.8.1",
    "morgan": "^1.10.0",
    "postcss": "^8.4.38",
    "postcss-less": "^6.0.0",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^9.5.2",
    "prettier": "^3.2.5",
    "standard-version": "^9.5.0",
    "style-loader": "^3.3.4",
    "stylelint": "^16.3.1",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-order": "^6.0.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.91.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^7.1.1",
    "webpack-hot-middleware": "^2.26.1",
    "webpack-merge": "^5.10.0",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "author": "yiru",
  "engines": {
    "node": ">=19.0.0"
  },
  "bin": "./bin/huxy.js"
}
